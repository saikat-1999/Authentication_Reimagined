<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".featureModules.onBoardingModule.ui.login.fragments.AadharNumberFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <TextView-->
<!--            android:id="@+id/enter_aadhar"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Enter your Aadhar Number"-->
<!--            android:textStyle="bold"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/aadhar_no"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            android:textSize="20sp"/>-->

        <EditText
            android:id="@+id/aadhar_no"
            android:layout_width="210dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/choose_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/aadhar_no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Choose zip"/>

        <EditText
            android:id="@+id/passcode"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/aadhar_no"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="50dp"
            android:hint="Enter passcode"/>
        <Button
            android:id="@+id/unzip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/aadhar_no"
            app:layout_constraintTop_toBottomOf="@+id/choose_zip"
            android:text="Unzip"/>

        <Button
            android:id="@+id/qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/aadhar_no"
            app:layout_constraintTop_toBottomOf="@+id/unzip"
            android:text="QR"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>